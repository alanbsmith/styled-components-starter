{
  "name": "styled-components-starter",
  "version": "0.1.0",
  "description": "a simple starter for Styled Components applications",
  "main": "server.js",
  "scripts": {
    "build": "webpack --config webpack.prod.config.js",
    "dev": "webpack-dev-server --hot --inline",
    "lint": "run-s lint:js lint:style",
    "lint:js": "npm run lint:eslint --",
    "lint:js:watch": "esw -w src/**",
    "lint:eslint": "eslint --ignore-path .gitignore src/**",
    "lint:style": "stylelint -- \"./src/**/*.js\"",
    "lint:watch": "esw -w src/**",
    "review": "run-s lint test:clean test test:coverage:report",
    "start": "npm run build && NODE_ENV=production node server.js",
    "test": "jest src/**",
    "test:clean": "rimraf ./coverage",
    "test:watch": "jest src/** --watch",
    "test:watchAll": "jest src/** --watchAll",
    "test:coverage:report": "open coverage/lcov-report/index.html"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "enzyme-adapter-react-16": "^1.1.0",
    "express": "^4.16.2",
    "fontfaceobserver": "^2.0.13",
    "polished": "^1.9.0",
    "prop-types": "^15.6.0",
    "raf": "^3.4.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "styled-components": "^2.3.0",
    "webpack": "^3.10.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.3",
    "enzyme": "^3.2.0",
    "eslint": "^4.13.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "eslint-watch": "^3.1.3",
    "expect-enzyme": "^1.3.0",
    "jest": "^22.0.0",
    "jest-styled-components": "^4.9.0",
    "npm-run-all": "^4.1.2",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.2.0",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.2.1",
    "webpack-dev-middleware": "^2.0.1",
    "webpack-dev-server": "^2.9.7",
    "webpack-hot-middleware": "^2.21.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**",
      "!src/index.js",
      "!src/**/**.snap",
      "!src/config/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleDirectories": ["node_modules", "./"],
    "setupFiles": ["raf/polyfill", "./__tests__/config"]
  }
}
